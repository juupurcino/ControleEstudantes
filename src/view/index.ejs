<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="./css/style.css">
  <title>Controle de estudantes</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary"
    style="background-color: #f0f0f0; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
    <div class="container-fluid">
      <div>
        <a class="navbar-brand gradiente" href="/">CONTROLE</a><a class="navbar-brand titulo" href="/">de Estudantes</a>
      </div>
      <span class="navbar-text">
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#" style="font-weight: 500;">Cadastrar:</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/cadastroAluno">Alunos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">|</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cadastroSala">Sala</a>
            </li>
          </ul>
        </div>
      </span>
    </div>
  </nav>

  <div class="formulario">
    <h6>Salas de aula: </h6>
    <div class="mb-3 at" style="margin: 3%;">
      <form action="/" method="post">
        <select id="sala" onchange="this.form.submit()" name="nome" class="form-select" required>
          <option aria-hidden="">Selecione uma sala</option>
          <% for (let i=0; i < salas.length; i++) { %>
            <option value='<%= salas[i].IDSala %>' <%=id==salas[i].IDSala ? 'selected' : '' %>> <%= salas[i].Nome %>
            </option>
            <% } %>
        </select>
      </form>
    </div>
  </div>

  <div>
    <h1>Alunos</h1>
  </div>

  <div class="container">

    <div class="row row-cols-1 row-cols-md-3 g-4"">
     
      <% for (let i=0; i<alunos.length; i++) { %>
        <div class=" col">
      <div class="card h-100">
        <img src="imagens/<%= alunos[i].Foto %>" class="card-img-top" alt="Foto aluno">
        <div class="card-body">
          <h5 class="card-title">
            <%= alunos[i].Nome %>
          </h5>
          <p class="card-text">Idade: <%= alunos[i].Idade %>
          </p>
          <form action="/editarAluno/<%= alunos[i].IDAluno %>" method="get">
            <button type="submit" class="btn btn-secondary" id="editarAluno" name="editarAluno">Editar</button>
          </form>
        </div>
      </div>
    </div>
    <% } %>

  </div>
  </div>


  <!-- Bootstrap JavaScript bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>